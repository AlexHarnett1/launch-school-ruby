<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>
</head>

<body>
  <ul class="pure-menu-list">
    <% @contents.each do |file| %>
      <li class="pure-menu-item">
        <a href="<%= file %>" class="pure-menu-link"><%= file %></a>
      </li>
    <% end %>
  </ul>
  <%if @ascending == 'true' || @ascending == nil%>
    <h2><a href="/?ascend=false">Sort Descending</h2>
  <%else%>
    <h2><a href="/?ascend=true">Sort Ascending</h2>
  <%end%>

</body>