<ul id="lists">
  <% sort_lists(@lists) do |list| %>
    <%if list_completed?(list)%>
      <li class="<%=list_class(list)%>">
    <%else%>
      <li>
    <%end%>
      <a href="lists/<%=list[:id]%>"> 
        <h2><%=list[:name]%></h2> 
        <p><%=num_todos_completed(list)%> / <%=todos_count(list)%></p>
      </a>
    </li>
  <% end %>
</ul>

<%content_for :header_links do%>
  <a class="add" href="/lists/new">New List<a>
<%end%>